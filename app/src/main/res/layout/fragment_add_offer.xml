<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddOfferFragment">


    <TextView
        android:layout_width="226dp"
        android:layout_height="59dp"
        android:text="Add New Offer"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="70dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="291dp"
        android:layout_height="184dp"
        android:src="@drawable/offre"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="317dp"
        android:layout_height="56dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="20dp"
        android:ems="10"
        android:hint="Post Name" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="317dp"
        android:layout_height="56dp"
        android:hint="Description"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="20dp"
        android:ems="10" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="317dp"
        android:layout_height="56dp"
        android:ems="10"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="20dp"
        android:hint="Number Position"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="134dp"
        android:layout_height="52dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="40dp"
        android:backgroundTint="@color/gradient_start_color"
        android:text="Add"
         />

    <Button
        android:id="@+id/button3"
        android:layout_width="134dp"
        android:layout_height="52dp"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="200dp"
        android:backgroundTint="@color/gradient_end_color"
        android:text="Cancel"
         />



</FrameLayout>